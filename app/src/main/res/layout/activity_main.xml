<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_theme_background"
    android:padding="16dp">

    <!-- Semi-transparent overlay to improve readability -->
    <View
        android:id="@+id/overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@android:color/transparent"
            android:padding="16dp">

            <!-- Header Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/bg_header_transparent"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Halo Controller"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/versionTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Version: v1.5"
                    android:textSize="12sp"
                    android:textColor="#BBFFFFFF"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/connectionStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Disconnected"
                    android:textSize="14sp"
                    android:textColor="#FF6B6B"
                    android:textStyle="bold"/>
            </LinearLayout>

            <!-- Connection Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_card"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="📡 Device Connection"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="12dp"/>

                <Spinner
                    android:id="@+id/devicesSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_spinner"
                    android:layout_marginBottom="12dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="8dp">

                    <Button
                        android:id="@+id/scanButton"
                        android:layout_width="0dp"
                        android:layout_height="52dp"
                        android:layout_weight="1"
                        android:text="🔍 Scan"
                        android:textSize="16sp"
                        android:textAllCaps="false"
                        android:background="@drawable/bg_scan_button"
                        android:textColor="#FFFFFF"
                        android:drawablePadding="8dp"
                        android:layout_marginEnd="6dp"/>

                    <Button
                        android:id="@+id/connectButton"
                        android:layout_width="0dp"
                        android:layout_height="52dp"
                        android:layout_weight="1"
                        android:text="📶 Connect"
                        android:textSize="16sp"
                        android:textAllCaps="false"
                        android:background="@drawable/bg_connect_button"
                        android:textColor="#FFFFFF"
                        android:drawablePadding="8dp"
                        android:layout_marginStart="6dp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/statusTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ready to scan for devices"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:gravity="center"/>
            </LinearLayout>

            <!-- Compact Strobe Control Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/bg_card"
                android:padding="12dp"
                android:layout_marginBottom="16dp"
                android:gravity="center_vertical">

                <Button
                    android:id="@+id/flashButton"
                    android:layout_width="0dp"
                    android:layout_height="42dp"
                    android:layout_weight="1.5"
                    android:text="⚡ FLASH"
                    android:textSize="14sp"
                    android:textAllCaps="false"
                    android:background="@drawable/bg_flash_button"
                    android:textColor="#FFFFFF"
                    android:layout_marginEnd="12dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Test Mode:"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:layout_marginEnd="8dp"/>

                <Switch
                    android:id="@+id/testSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleX="1.2"
                    android:scaleY="1.2"
                    android:thumbTint="@color/switch_thumb"
                    android:trackTint="@color/switch_track"/>
            </LinearLayout>

            <!-- Data Source Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_card"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="📡 Data Source"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="12dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Toggle Between Flarm and SoftRF as the Data Source:"
                        android:textSize="14sp"
                        android:textColor="#333333"/>

                    <Switch
                        android:id="@+id/dataSourceSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:thumbTint="@color/switch_thumb"
                        android:trackTint="@color/switch_track"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/dataSourceValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SoftRF (38400 baud)"
                    android:textSize="14sp"
                    android:textColor="#2196F3"
                    android:textStyle="bold"
                    android:gravity="center"/>
            </LinearLayout>

            <!-- Settings Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_card"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="⚙️ Settings"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="16dp"/>

                <!-- Volume Control -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:id="@+id/volumeValue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Volume: 7/10"
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:layout_marginBottom="8dp"/>

                    <com.example.Halo.TickSeekBar
                        android:id="@+id/volumeSeekBar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="10"
                        android:progress="7"/>

                </LinearLayout>

                <!-- Elevation Control -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:id="@+id/elevationValue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Airfield Elevation: 500ft"
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:layout_marginBottom="8dp"/>

                    <com.example.Halo.TickSeekBar
                        android:id="@+id/elevationSeekBar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="100"
                        android:progress="50"/>

                </LinearLayout>

                <!-- QNH Control -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:id="@+id/qnhValue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="QNH Pressure: 1013.5mb"
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:layout_marginBottom="8dp"/>

                    <com.example.Halo.TickSeekBar
                        android:id="@+id/qnhSeekBar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="200"
                        android:progress="107"/>

                </LinearLayout>

                <!-- Reset Button -->
                <Button
                    android:id="@+id/resetButton"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:text="🔄 Reset to Defaults"
                    android:textSize="16sp"
                    android:textAllCaps="false"
                    android:background="@drawable/bg_reset_button"
                    android:textColor="#FFFFFF"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>